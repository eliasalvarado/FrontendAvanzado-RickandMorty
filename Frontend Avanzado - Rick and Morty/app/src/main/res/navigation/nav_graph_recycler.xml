<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_recycler"
    app:startDestination="@id/login">

    <fragment
        android:id="@+id/fragment_character_list"
        android:name="com.example.proyectorickandmorty.fragments.fragment_character_list"
        android:label="fragment_character_list"
        tools:layout="@layout/fragment_character_list" >
        <action
            android:id="@+id/action_fragment_character_list_to_fragment_character_details"
            app:destination="@id/fragment_character_details" />
        <action
            android:id="@+id/action_fragment_character_list_to_login"
            app:destination="@id/login"
            app:popUpTo="@id/nav_graph_recycler"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/fragment_character_details"
        android:name="com.example.proyectorickandmorty.fragments.fragment_character_details"
        android:label="fragment_character_details"
        tools:layout="@layout/fragment_character_details" >
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/login"
        android:name="com.example.proyectorickandmorty.ui.character_list.login.Fragment_login"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_to_fragment_character_list"
            app:destination="@id/fragment_character_list"
            app:popUpTo="@id/nav_graph_recycler"
            app:popUpToInclusive="true"
            />
    </fragment>
</navigation>